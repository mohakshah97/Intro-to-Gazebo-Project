<?xml version="1.0" ?>

<robot name="my_rb1_robot">

    <gazebo reference="joint_base_footprint_base_link">
        <preserveFixedJoint>true</preserveFixedJoint>
        
    </gazebo>
    <gazebo reference="joint_base_link_front_castor">
        <preserveFixedJoint>true</preserveFixedJoint>
        
    </gazebo>
    <gazebo reference="joint_base_link_back_castor">
        <preserveFixedJoint>true</preserveFixedJoint>
        
    </gazebo>
    <!-- Gazebo tags - Laser scan -->
    <gazebo reference="joint_base_link_front_laser">
        <preserveFixedJoint>true</preserveFixedJoint>
    </gazebo>
    <gazebo reference="front_laser">
        <preserveFixedJoint>true</preserveFixedJoint>
        <material>Gazebo/DarkGrey</material>
    </gazebo>
    <!-- Gazebo tags - drive differental -->
    <gazebo>
        <plugin filename="libgazebo_ros_diff_drive.so" name="differential_drive_controller">
            <alwaysOn>true</alwaysOn>
            <updateRate>20</updateRate>
            <leftJoint>joint_base_link_left_wheel</leftJoint>
            <rightJoint>joint_base_link_right_wheel</rightJoint>
            <wheelSeparation>0.4</wheelSeparation>
            <wheelDiameter>0.05</wheelDiameter>
            <torque>10</torque>
            <commandTopic>cmd_vel</commandTopic>
            <odometryTopic>odom</odometryTopic>
            <odometryFrame>odom</odometryFrame>
            <robotBaseFrame>base_footprint</robotBaseFrame>
        </plugin>
    </gazebo>
    <gazebo reference="front_laser">
        <sensor type="ray" name="head_hokuyo_sensor">
            <pose>0 0 0 0 0 0</pose>
            <visualize>false</visualize>
            <update_rate>20</update_rate>
            <ray>
                <scan>
                    <horizontal>
                        <samples>720</samples>
                        <resolution>1</resolution>
                        <min_angle>-1.570796</min_angle>
                        <max_angle>1.570796</max_angle>
                    </horizontal>
                </scan>
                <range>
                    <min>0.20</min>
                    <max>10.0</max>
                    <resolution>0.01</resolution>
                </range>
                <noise>
                    <type>gaussian</type>
                    <mean>0.0</mean>
                    <stddev>0.01</stddev>
                </noise>
            </ray>
            <plugin name="gazebo_ros_head_hokuyo_controller" filename="libgazebo_ros_laser.so">
                <topicName>/scan</topicName>
                <frameName>sensor_laser</frameName>
            </plugin>
        </sensor>
    </gazebo>

    <gazebo reference="base_link">
        <material>Gazebo/Black</material>
    </gazebo>
    <gazebo reference="left_wheel">
        <material>Gazebo/Grey</material>
        <mu1>1</mu1>
        <mu2>1</mu2>
    </gazebo>
    <gazebo reference="right_wheel">
        <material>Gazebo/Grey</material>
        <mu1>1</mu1>
        <mu2>1</mu2>
    </gazebo>
    <gazebo reference="back_caster">
        <material>Gazebo/Grey</material>
        <mu1>0</mu1>
        <mu2>0</mu2>
    </gazebo>
    <gazebo reference="front_caster">
        <material>Gazebo/Grey</material>
        <mu1>0</mu1>
        <mu2>0</mu2>
    </gazebo>
    <!-- Link - base footprint -->
    <link name="base_footprint">
        <inertial>
            <mass value="0.5" />
            <origin xyz="0 0 0.3" rpy="0 0 0" />
            <inertia ixx="0.4625" ixy="0" ixz="0" iyy="0.4625" iyz="0" izz="0.825" />
        </inertial>

        <!-- <collision>
            <geometry>
                <cylinder radius = "0.05" length="0.5" />
            </geometry>
        </collision>

        <visual>
            <geometry>
                <cylinder radius = "0.05" length="0.5" />
            </geometry>
            <material name="Red">
                <color rgba="1 0 0 1" />
            </material>
        </visual> -->
    </link>
    <!-- Joint - base link -->
    <joint name="joint_base_footprint_base_link" type="fixed">
        <origin rpy="0 0 0" xyz="0 0 0.15" />
        <child link="base_link" />
        <parent link="base_footprint" />
        <limit effort="10000" velocity="1000" />
        <joint_properties damping="1.0" friction="1.0" />
    </joint>    

    <!-- Link - base link -->
    <link name="base_link">
        <inertial>
            <mass value="20.0" />
            <origin xyz="0 0 0.15" rpy="0 0 0" />
            <inertia ixx="0.4625" ixy="0" ixz="0" iyy="0.4625" iyz="0" izz="0.825" />
        </inertial>

        <collision>
            <geometry>
                <cylinder radius = "0.25" length="0.3" />
            </geometry>
        </collision>

        <visual>
            <geometry>
                <cylinder radius = "0.25" length="0.3" />
            </geometry>
            <material name="Blue">
                <color rgba="0 0 1 0.5" />
            </material>
        </visual>
    </link>
    <!-- Joint - base_link / left wheel -->
    <joint name="joint_base_link_left_wheel" type="continuous">
        <origin rpy="0 0 0" xyz="0 0.2 -0.15" />
        <child link="left_wheel" />
        <parent link="base_link" />
        <axis rpy="0 0 0" xyz="0 1 0" />
        <limit effort="100" velocity="10" />
        <joint_properties damping="1.0" friction="1.0" />
    </joint>

    <!-- Link - left wheel -->
    <link name="left_wheel">
        <inertial>
            <mass value="1" />
            <origin xyz="0 0 0" rpy="0 0 0" />
            <inertia ixx="0.099" ixy="0" ixz="0" iyy="0.099" iyz="0" izz="0.312"/>
        </inertial>

        <collision>
            <origin rpy="1.5707 0 0" xyz="0 0 0" />
            <geometry>
                <cylinder length="0.1" radius="0.025"/>
            </geometry>
        </collision>
        <visual>
            <origin rpy="1.5707 0 0" xyz="0 0 0" />
            <geometry>
                <cylinder length="0.1" radius="0.025"/>
            </geometry>
            <material name="Red">
                <color rgba="1 0 0 1" />
            </material>
        </visual>
    </link>
    <!-- Joint - base_link / right_wheel -->
    <joint name="joint_base_link_right_wheel" type="continuous">
        <origin rpy="0 0 0" xyz="0 -0.2 -0.15" />
        <child link="right_wheel" />
        <parent link="base_link" />
        <axis rpy="0 0 0" xyz="0 1 0" />
        <limit effort="100" velocity="10" />
        <joint_properties damping="1.0" friction="1.0" />
    </joint>

    <!-- Link - right wheel -->
    <link name="right_wheel">
        <inertial>
            <mass value="1" />
            <origin xyz="0 0 0" rpy="0 0 0" />
            <inertia ixx="0.099" ixy="0" ixz="0" iyy="0.099" iyz="0" izz="0.312"/>
        </inertial>

        <collision>
            <origin rpy="1.5707 0 0" xyz="0 0 0" />
            <geometry>
                <cylinder length="0.1" radius="0.025"/>
            </geometry>
        </collision>
        <visual>
            <origin rpy="1.5707 0 0" xyz="0 0 0" />
            <geometry>
                <cylinder length="0.1" radius="0.025"/>
            </geometry>
            <material name="Red">
                <color rgba="1 0 0 1" />
            </material>
        </visual>
    </link>
    <!-- Joint - base_link / back_castor  -->
    <joint name="joint_base_link_back_castor" type="fixed">
        <origin rpy="0 0 0" xyz="-0.1 0 -0.15" />
        <child link="back_castor" />
        <parent link="base_link" />
        <axis rpy="0 0 0" xyz="0 1 0" />
        <limit effort="100" velocity="10" />
        <joint_properties damping="1.0" friction="1.0" />
    </joint>

    <!-- Link - back_castor -->
    <link name="back_castor">
        <inertial>
            <mass value="1" />
            <origin xyz="0 0 0" rpy="0 0 0" />
            <inertia ixx="0.099" ixy="0" ixz="0" iyy="0.099" iyz="0" izz="0.312"/>
        </inertial>

        <collision>
            <origin rpy="1.5707 0 0" xyz="0 0 0" />
            <geometry>
                <sphere  radius="0.025"/>
            </geometry>
        </collision>
        <visual>
            <origin rpy="1.5707 0 0" xyz="0 0 0" />
            <geometry>
                <sphere  radius="0.025"/>
            </geometry>
            <material name="Blue">
                <color rgba="0 0 1 1" />
            </material>
        </visual>
    </link>
    <!-- Joint - base_link / front_castor -->
    <joint name="joint_base_link_front_castor" type="fixed">
        <origin rpy="0 0 0" xyz="0.1 0 -0.15" />
        <child link="front_castor" />
        <parent link="base_link" />
        <axis rpy="0 0 0" xyz="0 1 0" />
        <limit effort="100" velocity="10" />
        <joint_properties damping="1.0" friction="1.0" />
    </joint>

    <!-- Link - front_castor -->
    <link name="front_castor">
        <inertial>
            <mass value="1" />
            <origin xyz="0 0 0" rpy="0 0 0" />
            <inertia ixx="0.099" ixy="0" ixz="0" iyy="0.099" iyz="0" izz="0.312"/>
        </inertial>

        <collision>
            <origin rpy="1.5707 0 0" xyz="0 0 0" />
            <geometry>
                <sphere  radius="0.025"/>
            </geometry>
        </collision>
        <visual>
            <origin rpy="1.5707 0 0" xyz="0 0 0" />
            <geometry>
                <sphere  radius="0.025"/>
            </geometry>
            <material name="Blue">
                <color rgba="0 0 1 1" />
            </material>
        </visual>
    </link>
    <!-- Joint - base_link / front_laser -->
    <joint name="joint_base_link_front_laser" type="fixed">
        <origin rpy="-3.14 0 0" xyz="0.25 0 0.075" />
        <child link="front_laser" />
        <parent link="base_link" />
        <axis rpy="0 0 0" xyz="0 1 0" />
        <limit effort="10000" velocity="1000" />
        <joint_properties damping="1.0" friction="1.0" />
    </joint>

    <!-- Link - front_laser -->
    <link name="front_laser">
        <inertial>
            <mass value="0.5" />
            <origin xyz="0 0 0" rpy="0 0 0" />
            <inertia ixx="0.099" ixy="0" ixz="0" iyy="0.099" iyz="0" izz="0.312"/>
        </inertial>

        <!-- <collision>
            <origin rpy="1.5707 0 0" xyz="0 0 0" />
            <geometry>
                <sphere  radius="0.025"/>
            </geometry>
        </collision>
        <visual>
            <origin rpy="1.5707 0 0" xyz="0 0 0" />
            <geometry>
                <cylinder length="0.025" radius="0.025"/>
            </geometry>
            <material name="Blue">
                <color rgba="0 0 1 1" />
            </material>
        </visual> -->
    </link>
</robot>